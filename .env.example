# MindSentinel - Variables de Entorno
# =====================================
# Copia este archivo a .env y rellena con tus credenciales

# Google Gemini API Key (Obligatorio)
# Obtén tu API Key gratis en: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=tu_api_key_aqui

# Configuración del Modelo LLM (Opcional)
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.7

# Configuración de Streamlit (Opcional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# Configuración de Base de Datos (opcional)
DB_PATH=database/mindsentinel.db

# Modo de desarrollo (opcional)
DEBUG=False